{
  "name": "the-logger",
  "version": "2.0.7",
  "description": "A better logging library for node.js",
  "main": "dist/index.js",
  "types": "dist",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "build": "tsc",
    "format": "prettier --write ./src/ ./test/",
    "format-check": "prettier --write ./src/ ./test/",
    "lint": "eslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Ruben Hakopian <ruben.hakopian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubenhak/nodejs-super-logger.git"
  },
  "bugs": {
    "url": "https://github.com/rubenhak/nodejs-super-logger/issues"
  },
  "homepage": "https://github.com/rubenhak/nodejs-super-logger#readme",
  "dependencies": {
    "fs-extra": "9.0.1",
    "mkdirp": "^1.0.4",
    "pino": "6.3.0",
    "pino-multi-stream": "5.1.1",
    "pino-pretty": "4.1.0",
    "the-lodash": "^2.0.0",
    "the-promise": "^2.0.4"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/pino": "6.3.0",
    "@types/should": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "prettier": "^2.1.0",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
